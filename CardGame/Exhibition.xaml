            </RadioButton>
            <RadioButton x:Name="PossibleRadioButton2" Tag="28" Checked="RadioButton_Checked" GroupName="restGroup" Style="{DynamicResource BoxRadioButtonStyle}" Visibility="Collapsed">
                <Image Source="{Binding Path=RestsCards[28],Converter={StaticResource Card2Image}}"/>
            </RadioButton>

        </WrapPanel>
        <Button Style="{DynamicResource SideButtonStyle}"
                Margin="0,20"
                Width="100" Height="50"
                 FontWeight="Bold"
                 Foreground="#FF086F9E"
                 FontStyle="Italic"
                 FontSize="16"
                 HorizontalAlignment="Center"
                Content="Transform" Click="TransForm_Click"/>
    </StackPanel>
</Window>
